.blog-article
  %h2.article-title="My wardrobe nightmare"
  %p.published-date
    May 2023
  .article-section.article-section-right-image.text-first.article-section-with-quote.article-half-page-image-floated

    .article-text
      .article-image.aspect-1
        -image_url = image_path("blog/my-wardrobe-challenge/messy-wardrobe-rail.jpg")
