- url = listing_url(@url_params.merge({:id => @listing.id}))
%tr
  %td.person-name
    %h1= t("emails.common.hi", name: PersonViewUtils.person_display_name_for_type(@recipient, 'first_name_only'))

%tr
  %td
    %p
      = t("emails.update_to_watched_listing.this_listing_can_be_bought", listing: @listing.title)

= render :partial => "action_button-v2", :locals => { :text => t("emails.update_to_watched_listing.view_listing"), :url => url}
= render 'person_mailer/cant_click', url: url
