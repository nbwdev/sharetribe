- url = person_payment_settings_url(@recipient, @url_params.merge({:id => @listing.id}))
%tr
  %td.person-name
    %h1= t("emails.common.hi", name: PersonViewUtils.person_display_name_for_type(@recipient, 'first_name_only'))

%tr
  %td
    %p
      = t("emails.new_watcher_for_listing.listing_cannot_be_sold", listing: @listing.title)

= render :partial => "action_button-v2", :locals => { :text => t("emails.new_watcher_for_listing.view_settings"), :url => url}
= render 'person_mailer/cant_click', url: url
