  / temp
  :css
    span.ShopButton_background { background-color: #783676; }
    span.AddNewListingButton_background {background-color: #783676; }

- content_for :extra_javascript do
  %script{:type => "text/javascript", :src => "https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"}
  :javascript
    $(".tips-carousel").slick( {
      centerMode: true,
      centerPadding: '2px',
      variableWidth: true,
      dots: true
    });
    $(".carousel-hide").removeClass("carousel-hide");

.logged_out_homepage 

  .banner
    .caption
      %h2.banner-title
        Never Worn It?
        <br>
        Why Keep It?
      %p.banner-text
        Make space, make money, and elevate your life
      .button-container
        = link_to("/signup", :class => "hp-button hp-banner-button") do
          Sell now
    -image_url = image_path("logged_out_homepage/holding-orange-red-dresses.jpg")
    =image_tag(image_url, class: 'intro-image', alt: "A lady holds two new dresses as if choosing which to wear.")

  .quick-guide-container
    .quick-guide
      %h2.so-simple
        It's simple to sell
      
      .guide-columns
        .guide-column
          .guide-column-content
            -image_url = image_path("logged_out_homepage/taking-photo-of-jumper.jpg")
            =image_tag(image_url, class: 'step_img', alt: "Person with a smartphone taking a photo of a cosy grey v-necked jumper.")
            %p.step-number
              1
            %p.step-description
              list your item for free
        .guide-column
          .guide-column-content
            -image_url = image_path("logged_out_homepage/unboxing.jpg")
            =image_tag(image_url, class: 'step_img', alt: "A lady sits on a sofa opening a cardboard box. She is looking into the box and smiling.")
            %p.step-number
              2
            %p.step-description
              sell it and send it
        .guide-column
          .guide-column-content
            -image_url = image_path("logged_out_homepage/make-it-rain.jpg")
            =image_tag(image_url, class: 'step_img', alt: "A lady smiles as she holds a stack of bank notes in each hand while more bank notes rain down from above.")
            %p.step-number
              3
            %p.step-description
              and bank the cash!
    
      = link_to("/signup", :class => "hp-button hp-button-inverted") do
        Join for free

  .wardrobe-challenge-section
    .wardrobe-challenge-image
      .image-container
        -image_url = image_path("logged_out_homepage/peeking-through-clothes.jpg")
        =image_tag(image_url, class: 'intro-image', alt: "A lady peeks through her messy clothes rail with a happy expression on her face, perhaps looking forward to a good decluttering session.")
    .caption
      .caption-container
        %h2.banner-title
          Take the wardrobe challenge
        %p.banner-text
          We show you how to take back your&nbsp;wardrobe in easy&nbsp;steps
        %p.banner-text
          Get ready for a new wardrobe and a new&nbsp;you
        .button-container
          = link_to("/blog/the_wardrobe_challenge", :class => "hp-button hp-button-standard") do
            Take the challenge

  .tips-container
    =render :partial => "logged_out_homepage/carousel", :locals => {carousel_id: "tips"}

    %p
    = link_to("https://instagram.com/neverbeenwornuk", :class => "follow-insta", :target => "_blank") do
      Find us on instagram 
      %span.instagram
        = render 'layouts/footer/social_icons', social_service: "instagram"
        neverbeenwornuk
    
    /=render :partial => "logged_out_homepage/carousel_item", :locals => {item_class: ""}

  .our-story-container
    .our-story
      %h2
        Our Story
      .our-story-columns
        .our-story-column
          .our-story-icon.about-icon
          %h3.our-story-title
            My story
          %p.our-story-text
            From wardrobe nightmare to declutter heaven
          .story-button-container
            = link_to("/my_story", :class => "about-button hp-button hp-button-inverted") do
              My journey
        .our-story-column
          .our-story-icon.how-it-works-icon
          %h3.our-story-title
            How it works
          %p.our-story-text
            Simple and quick how-to guides
          .story-button-container
            = link_to("/en/infos/how_to_use", :class => "about-button hp-button hp-button-inverted") do
              How it works
        .our-story-column
          .our-story-icon.code-of-conduct-icon
          %h3.our-story-title
            Fix your drawers forever
          %p.our-story-text
            Nightmare drawers no more
          .story-button-container
            = link_to("/en/blog/fix_your_drawers_forever", :class => "about-button hp-button hp-button-inverted") do
              Read how


