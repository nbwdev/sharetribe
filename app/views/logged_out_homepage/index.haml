.logged_out_homepage 

  .quick-guide-container#quick-guide
    %h2.logged-out-homepage
      Build a better wardrobe that’s perfect for you
    .quick-guide
      .guide-columns
        .guide-column
          = link_to("/blog/the_wardrobe_challenge") do
            .guide-column-content
              %p.step-number
                Step 1
              -image_url = image_path("logged_out_homepage/holding-red-dress.jpg")
              =image_tag(image_url, class: 'step_img', alt: "A lady holds a red dress triumphantly having chosen to sell it because she never wears it.")
              %p.step-title
                Never worn it?
              %p.step-description
                Why keep it?
                %br
                Sell It
          = link_to("/en/listings/new", :class => "hp-button hp-button-inverted guide-button mobile-only") do
            Join us
        .guide-column
          = link_to("/blog/sustainability_the_right_choice") do
            .guide-column-content
              %p.step-number
                Step 2
              -image_url = image_path("logged_out_homepage/unboxing.jpg")
              =image_tag(image_url, class: 'step_img', alt: "A lady sits on a sofa opening a cardboard box. She is looking into the box and smiling.")
              %p.step-title
                Resell it
              %p.step-description
                Put it back out into the world for others to buy
          = link_to("/en/listings/new", :class => "hp-button hp-button-inverted guide-button") do
            Join us
        .guide-column
          = link_to("/s") do
            .guide-column-content
              %p.step-number
                Step 3
              -image_url = image_path("logged_out_homepage/capsule-wardrobe.jpg")
              =image_tag(image_url, class: 'step_img', alt: "A capsule wardrobe consisting of a few colourful pieces of clothing that could be worn in different combinations with each other.")
              %p.step-title
                Keep what you love
              %p.step-description
                Build a better wardrobe for you
          = link_to("/en/listings/new", :class => "hp-button hp-button-inverted guide-button mobile-only") do
            Join us

  .wardrobe-challenge-section
    .wardrobe-challenge-image
      .image-container
        -image_url = image_path("logged_out_homepage/stylish-on-staircase.jpg")
        =image_tag(image_url, class: 'intro-image', alt: "A lady peeks through her messy clothes rail with a happy expression on her face, perhaps looking forward to a good decluttering session.")
    .caption
      .caption-container
        %h2.banner-title
          Get your wardrobe ready for autumn/winter
        %p.banner-text
          With my top 5 quick fixes
        %p.banner-text
          they’re super quick
        .button-container
          = link_to("en/blog/top_5_fixes_for_autumn", :class => "hp-button hp-button-standard") do
            Top 5 fixes

